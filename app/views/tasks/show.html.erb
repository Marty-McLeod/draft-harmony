<div class="container">
    
    <div class="col-10 bg-white rounded-3 mt-3 p-3">
        <h1 class="mt-3">Writing task details</h1>
        <hr>
        <h3>Title:</h3>
        <h4 class="mb-3"><%= @task.title %>  <span class="badge bg-warning">ID: <%= @task.id %></span></h4>
        <h3>Synopsis:</h3>
        <p class="mb-3 bg-primary text-light p-3 rounded-3"><%= @task.synopsis %></p>
        <h3>Outline:</h3>
  
        <div class="mb-3 position-relative" id="div-outline">
            <!-- A new/empty outline is created by saving an empty string: "" -->
            <% if !@task.outline.contents.empty? %>
                <% text = @task.outline.contents %>
                <%= markdown(text) %>
                <span class="d-flex justify-content-end">
                    <%= link_to raw('<i class="fa-regular fa-trash-can"></i> Delete'), task_outline_path(@task, @task.outline), 
                        data: {turbo_method: :delete, turbo_confirm: "Delete outline?"},
                        class: "btn btn-sm btn-delete btn-outline-dark rounded-3 m-2"
                    %>
                </span>
            <% else %>
                <!-- Insert an empty object to fill the empty outline field with whitespace -->
                <% outline_id = @task.outline.id %>
                <%= button_to raw('<i class="fa-solid fa-file-signature"></i> Generate outline'), 
                    outline_generate_path(id: outline_id, task_id: @task.id), method: :put,
                    class: "btn btn-success rounded-3", id: "btn-generate"
                %>
            <% end %>

        </div>
        <h3>Notes:</h3>
            <% if @task.notes.present? %>
                <% @task.notes.each do |note| %>
                    <p class="mb-3 bg-secondary text-dark fst-italic p-2 rounded-3 position-relative">
                        
                        <%= note.text %>
                        <br>
                        <%= link_to raw('<i class="fa-regular fa-trash-can"></i> Delete'), task_note_path(@task, note), 
                            data: {turbo_method: :delete, turbo_confirm: "Delete note?"},
                            class: "btn btn-sm btn-delete btn-outline-dark rounded-3 position-absolute bottom-0 end-0 m-2"
                        %>
                        <br>            
                    </p>                    
                <% end %>


            <% else %>
                <p class="fst-italic">(No notes addded yet)</p>
            <% end %>
        <hr>
        
        <%= simple_form_for [@task, @note] do |note| %>
            <%= note.input :text, label: "Add a note:", label_html: { class: "fw-bold"} %>
            <%= note.submit "Add note", class: "btn btn-sm btn-success text-white rounded-3" %>
        <% end %>

        <div class="d-flex justify-content-between mt-3">
            <%= link_to raw('<i class="fa-solid fa-arrow-left"></i> All tasks'), tasks_path, 
                class: "text-decoration-none" 
            %>
            <%= link_to raw('<i class="fa-solid fa-pencil"></i> Edit task'), edit_task_path(@task), 
                class: "text-decoration-none" 
            %>      
        </div>        
    </div>

</div>

